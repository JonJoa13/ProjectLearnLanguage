<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jon.projectlearnlanguage.EditorZone.CreateUser"
    android:orientation="vertical"
    android:weightSum="1">

    <Button
        android:text="@string/btn_back"
        android:layout_height="wrap_content"
        android:id="@+id/btn_backToSelectActionFromCW"
        android:layout_width="wrap_content"
        android:onClick="onClickBackToCoursView"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.22">

        <TextView
            android:text="@string/tv_titel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_titel"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp" />

        <TextView
            android:text="@string/cc_cours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cours"
            android:textSize="18sp"
            android:layout_marginTop="50dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/cc_cours"
            android:ems="10"
            android:id="@+id/et_cours"
            android:background="?attr/colorButtonNormal"
            android:minHeight="30dp" />

        <TextView
            android:text="@string/cc_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_level"
            android:textSize="18sp"
            android:layout_marginTop="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/cc_level"
            android:ems="10"
            android:id="@+id/et_level"
            android:background="?attr/colorButtonNormal"
            android:minHeight="30dp"
            android:layout_marginBottom="15dp" />

        <Button
            android:text="@string/addExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_addExercise"
            android:layout_marginLeft="105dp"
            android:onClick="onClickAddExToCours"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/ez_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_modifyCours"
            android:onClick="onClickModifyCours" />

        <Button
            android:text="@string/ez_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_deleteCours"
            android:onClick="onClickDeleteCours"/>

    </LinearLayout>

</LinearLayout>

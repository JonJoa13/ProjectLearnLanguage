<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jon.projectlearnlanguage.EditorZone.CreateUser"
    android:orientation="vertical"
    android:weightSum="1">

    <Button
        android:text="@string/btn_back"
        android:layout_height="wrap_content"
        android:id="@+id/btn_backToUserViewFromCreateUser"
        android:layout_width="wrap_content"
        android:onClick="onClickBackToCoursView"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.81">

        <TextView
            android:text="@string/tv_titel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_titel"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp" />

        <TextView
            android:text="@string/cv_choice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_choice1"
            android:textSize="18sp"
            android:layout_marginTop="50dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_choice1"
            android:background="?attr/colorButtonNormal"
            android:minHeight="30dp" />

        <TextView
            android:text="@string/cv_choice2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_choice2"
            android:textSize="18sp"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_choice2"
            android:background="?attr/colorButtonNormal"
            android:minHeight="30dp" />

        <TextView
            android:text="@string/cv_choice3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_choice3"
            android:textSize="18sp"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_choice3"
            android:background="?attr/colorButtonNormal"
            android:minHeight="30dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/ez_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_createUser" />

    </LinearLayout>

</LinearLayout>
